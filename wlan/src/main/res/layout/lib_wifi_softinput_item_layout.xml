<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/softInput_item_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lib_wifi_soft_input_selector_item_bg">

    <TextView
        android:id="@+id/softInput_item_text"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="a"
        android:textStyle="bold"
        android:singleLine="true"
        />

    <ImageView
        android:id="@+id/softInput_item_image"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:visibility="gone"
        android:scaleType="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@mipmap/lib_wifi_soft_input_del" />
</androidx.constraintlayout.widget.ConstraintLayout>
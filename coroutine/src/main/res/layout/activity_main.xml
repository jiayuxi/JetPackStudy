<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/button_globalScope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GlobalScope"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_mainScope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mainScope"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_globalScope" />

    <Button
        android:id="@+id/button_coroutineScope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="coroutineScope"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_mainScope" />
    <Button
        android:id="@+id/button_delay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_coroutineScope" />
    <Button
        android:id="@+id/button_retrofit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="retrofit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_delay" />

    <Button
        android:id="@+id/button_rxJava_retrofit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rxjava_retrofit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_retrofit" />

    <Button
        android:id="@+id/button_coroutine_retrofit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="coroutine_retrofit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_rxJava_retrofit" />
    <Button
        android:id="@+id/button_coroutine_exception"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exception"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_coroutine_retrofit" />

    <Button
        android:id="@+id/button_coroutine_lifecycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lifecycle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_coroutine_exception" />
</androidx.constraintlayout.widget.ConstraintLayout>